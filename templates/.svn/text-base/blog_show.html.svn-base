{% extends "base.html" %}

{% block title %} {{ blog.caption }} {% endblock %}

{% block content %}

<div class="content">
	<h1 style="text-align:center">{{ blog.caption }}</h1>
	<h5>{{ blog.published_time|date:"Y年m月d日"}},&nbsp; 分类:<a href="{% url blog_category blog.category.slug %}">{{ blog.category }} </a>&nbsp;&nbsp; 阅读:{{blog.counts}}</h5>

	{% for tag in blog.tags.all %}
		<div class="label label-info label-arrow label-arrow-right">{{ tag }}</div> 
	{% endfor %}
	<br><br>
	<center>
	{% for blog_picture in blog.blog_pictures.all reversed %}
		<img src="{{ blog_picture.image_url }}"  alt="Responsive image" class="img-thumbnail" >
	{% endfor %}
	</center>
        {% load markup %}
	<p> {{ blog.content|markdown:'codehilite'}}</p>
</div>
<br>
<!-- JiaThis Button BEGIN -->
<div class="jiathis_style">
	<span class="jiathis_txt">分享到：</span>
	<a class="jiathis_button_tools_1"></a>
	<a class="jiathis_button_tools_2"></a>
	<a class="jiathis_button_tools_3"></a>
	<a class="jiathis_button_tools_4"></a>
	<a href="http://www.jiathis.com/share" class="jiathis jiathis_txt jiathis_separator jtico jtico_jiathis" target="_blank">更多</a>
	<a class="jiathis_counter_style"></a>
</div>
<script type="text/javascript" src="http://v3.jiathis.com/code/jia.js" charset="utf-8"></script>
<!-- JiaThis Button END -->
<br><hr>
<!-- UY BEGIN -->
<div id="uyan_frame"></div>
<script type="text/javascript" src="http://v2.uyan.cc/code/uyan.js"></script>
<!-- UY END -->

{% endblock %}


